<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Financeiro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinanceSystem.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav me-auto mb-2 mb-lg-0 ms-5 fw-bold">
                    <span>@ViewData["Title"]</span>
                </div>
                <div class="d-flex">
                    <span class="navbar-text text-dark">
                        Olá, Alain Lobato
                    </span>
                </div>
            </div>
        </div>
    </nav>

    <div class="row flex-nowrap">
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-flex sidebar d-flex flex-column">
            <div class="position-sticky pt-3">
                <span class="me-0 text-white fs-4">Sistema Financeiro</span>
                <ul class="nav flex-column mt-5">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/">
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/NotasFiscais">
                            Notas Fiscais
                        </a>
                    </li>
                </ul>
            </div>
            <div class="mt-auto p-3">
                <span class="text-white small">Desenvolvido por Alain Lobato</span>
            </div>
        </nav>
    </div>



        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>